<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-secondary rounded-pill follow-font" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-primary rounded-pill follow-font" %>
  <% end %>
<% end %>