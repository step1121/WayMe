<div class="container-fluid">
  <div class="col-xl-5 col-md-9 col shadow p-5 rounded mx-auto bg-light ">
    <%= form_with model:vision, url: url do |f| %>

      <div class="row mx-auto mb-4 ">
        <%= f.text_field :title, class: 'form-control vision_title', placeholder: "DREAM" %>
      </div>

      <div class="row mx-auto  mb-4">
        <%= f.text_area :body, class: 'form-control vision_body', placeholder: "MOTIVE" %>
      </div>

      <div class="row mb-4">
        <div class="col-12 col-sm mb-sm-0 mb-4 justify-content-between">
          <i class="fas fa-tags fa-2x mr-3"></i>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, {:selected => vision.genre_id}) %>
        </div>

        <div class="col-12 col-sm ml-auto justify-content-between">
          <i class="fas fa-calendar-alt fa-2x mr-3"></i>
          <%= f.date_select :finish_on, use_month_numbers: true, start_year: Time.now.year, end_year: (Time.now.year + 100), discard_day: true , selected: day %>
        </div>
      </div>



      <div class="row justify-content-between">
        <% unless current_page?(new_vision_path)%>
          <%= link_to 'Destroy',  vision_path(@vision.id), method: :delete, data: { confirm: '本当にこのビジョンを消しますか？' }, class: "btn btn-outline-danger btn-lg col-5" %>
        <% else %>
          <div></div>
        <% end %>
        <%= f.submit submit, class: "btn btn-outline-success btn-lg col-5" %>
      </div>
    <% end %>
  </div>
</div>