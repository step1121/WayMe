<div class="fluid">
  <%= image_tag "bruno-bergher--8ttvM3Ca94-unsplash.jpg", class: "fluid fluid-image" %>

  <div class="new-form col-xl-4 col-sm-6 col-12 rounded m-2 p-5 mx-auto">
    <%= form_with model: @user, url: registration_path(resource_name) do |f| %>

      <div class="row d-flex justify-content-between mb-4">
        <div class="col-3 font-weight-bold font p-0"><%= f.label :name, "名前" %></div>
        <div class="col-6">
          <%= f.text_field :name, autofocus: true, autocomplete: "neme", placeholder: "Name", class: "form-control"%>
          <%= render "public/shared/error_messages", model: @user, attribute: :name %>
        </div>
      </div>

      <div class="row d-flex justify-content-between  mb-4">
        <div class="col-3 font-weight-bold font p-0"><%= f.label :birthday, "生年月日" %></div>
        <div class="col-6">
          <%= f.date_select :birthday, use_month_numbers: true, start_year: (Time.now.year + 100), end_year: (Time.now.year - 10), default: Date.new(2000, 1, 1), class: "form-control" %>
          <%= render "public/shared/error_messages", model: @user, attribute: :birthday %>
        </div>
      </div>

      <div class="row d-flex justify-content-between  mb-4">
        <div class="col-4 font-weight-bold font p-0"><%= f.label :mail, "メールアドレス" %></div>
        <div class="col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "form-control" %>
          <%= render "public/shared/error_messages", model: @user, attribute: :email %>
        </div>
      </div>

      <div class="row d-flex justify-content-between  mb-4">
        <div class="col-3 rounded-left font-weight-bold font p-0"><%= f.label :password, "パスワード" %></div>
        <div class="col-3 mr-auto rounded-right font-weight-bold font p-0"><% if @minimum_password_length %>
          (<%= @minimum_password_length %> 字以上)
        <% end %></div>
        <div class="col-6">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "PassWord", class: "form-control"%>
          <%= render "public/shared/error_messages", model: @user, attribute: :password %>
        </div>
      </div>

      <div class="row mb-4 d-flex justify-content-between ">
        <div class="col-5 font-weight-bold font p-0"><%= f.label :password_confirmation, "確認用パスワード" %></div>
        <div class="col-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "PassWord", class: "form-control" %>
          <%= render "public/shared/error_messages", model: @user, attribute: :password_confirmation %>
          </div>
      </div>

      <div class="row mb-4 justify-content-center ">
        <%= f.submit "登録する", class: "btn btn-primary rounded-pill btn-block" %>
      </div>
    <% end %>

     <div class="row mt-2 justify-content-center border-top border-dark">
 　    <%- if controller_name != 'sessions' %>
        <%= link_to "アカウントお持ちの方", root_path(resource_name), class: "btn btn-primary rounded-pill btn-block" %>
      <% end %>
    </div>
  </div>
</div>
