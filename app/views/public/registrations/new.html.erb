<div class="fluid">
  <%= image_tag "road-220058_1280.jpg", class: "fluid" %>

  <div class="new-form">
    <div class="col-5 m-2 p-5 rounded mx-auto new-form-area">
      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row d-flex justify-content-between mb-4 ">
          <div class="col-2 bg-light rounded"><%= f.label :name, "名前" %></div>
          <div class="col-6"><%= f.text_field :name, autofocus: true, autocomplete: "neme" %></div>
        </div>

        <div class="row d-flex justify-content-between  mb-4">
          <div class="col-3 bg-light rounded"><%= f.label :birthday, "生年月日" %></div>
          <div class="col-6"><%= f.date_field :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(Time.now.year) %></div>
        </div>

        <div class="row d-flex justify-content-between  mb-4">
          <div class="col-4 bg-light rounded"><%= f.label :mail, "メールアドレス" %></div>
          <div class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>

        <div class="row d-flex justify-content-between  mb-4">
          <div class="col-3 bg-light rounded-left"><%= f.label :password, "パスワード" %></div>
          <div class="col-3 mr-auto bg-light rounded-right"><% if @minimum_password_length %>
            (<%= @minimum_password_length %> 字以上)
          <% end %></div>
          <div class="col-6"><%= f.password_field :password, autocomplete: "new-password" %></div>
        </div>

        <div class="row mb-4 d-flex justify-content-between ">
          <div class="col-4 bg-light rounded"><%= f.label :password_confirmation, "確認用パスワード" %></div>
          <div class="col-6"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        </div>

        <div class="row mb-4 justify-content-center ">
          <%= f.submit "登録する", class: "btn btn-primary rounded-pill btn-block" %>
        </div>
      <% end %>

       <div class="row mt-2 justify-content-center border-top border-dark">
   　    <%- if controller_name != 'sessions' %>
          <%= link_to "アカウントお持ちの方", root_path(resource_name), class: "btn btn-primary rounded-pill btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
