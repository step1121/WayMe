<div class="fluid">
  <%= image_tag "road-220058_1280.jpg", class: "fluid" %>
  <div class="top-greeting">
     夢へ、あなただけの道のりを。
  </div>

  <div class="login-form">
    <div class="col-3 m-2 p-5 rounded mx-auto new-form-area">
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <div class="row justify-content-center mb-4 ">
          <%= f.text_field :name, autofocus: true, autocomplete: "neme", placeholder: "Name", class: "rounded-pill form-control"%>
        </div>
        <div class="row justify-content-center  mb-4">
          <%= f.password_field :password, autocomplete: "user-password", placeholder: "PassWord", class: "rounded-pill form-control" %>
        </div>
        <div class="row mb-4 justify-content-center ">
          <%= f.submit "ログイン", class: "btn btn-primary rounded-pill btn-block" %>
        </div>
      <% end %>

      <div class="row mt-2 justify-content-center border-top border-dark">
   　  　<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "アカウントをお持ちでない方", new_registration_path(resource_name), class: "btn btn-primary rounded-pill btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>