<h2>編集</h2>

<%= form_with model: @user, url: user_path(@user), method: :patch  do |f| %>
  
  <div class="form-group">
    <%= f.label :profile_image %>
    <%= f.file_field :profile_image, class: 'form-control-file user_image', accept: 'image/*' %>
  </div>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "neme" %>
  </div>
  
  <div class="field">
    <%= f.label :biography %><br />
    <%= f.text_field :biography, autofocus: true, autocomplete: "neme" %>
  </div>
  
  <div class="field">
    <%= f.label :birthday, "生年月日" %><br />
    <%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(Time.now.year) %>
  </div>

  <div class="field">
    <%= f.label :mail, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
<%=link_to "退会", out_check_users_path, style: 'width:150px', class: 'btn btn-outline-primary' %>