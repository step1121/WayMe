
<div class="container-fluid mb-5">
  <div class="col-4 shadow p-5 rounded mx-auto bg-light ">
    <%= form_with model: @user, url: user_path(@user), method: :patch  do |f| %>

      <div class="row mb-4 ">
        <div class="col text-center">
        <%= f.label :image do %>
          <%= image_tag @user.get_profile_image, size: "200x200", class: "rounded-circle avatar" %>
          <%= f.file_field :profile_image, class: 'uploader',style: 'display:none' %>
        <% end %>
        </div>
      </div>

      <div class="row d-flex justify-content-between mb-4 ">
        <div class="col-4 bg-light rounded"><%= f.label :name, "名前" %></div>
        <div class="col-8"><%= f.text_field :name, autofocus: true, autocomplete: "neme" %></div>
      </div>

      <div class="row d-flex justify-content-between  mb-4">
        <div class="col-4 bg-light rounded"><%= f.label :biography, "自己紹介" %></div>
        <div class="col-8"><%= f.text_field :biography, autofocus: true, autocomplete: "neme" %></div>
      </div>

      <div class="row d-flex justify-content-between  mb-4">
        <div class="col-4 bg-light rounded"><%= f.label :birthday, "生年月日" %></div>
        <div class="col-8"><%= f.date_field :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(Time.now.year) %></div>
      </div>

      <div class="row d-flex justify-content-between  mb-4">
        <div class="col-4 bg-light rounded"><%= f.label :mail, "メールアドレス" %></div>
        <div class="col-8"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>

      <div class="row d-flex justify-content-between  mb-1">
        <div class="col-4"><%=link_to "退会", out_check_users_path, class: 'btn btn-outline-danger rounded-pill btn-block' %></div>
        <div class="col-4"><%= f.submit "編集", class: "btn btn-outline-primary rounded-pill btn-block" %></div>
      </div>
    <% end %>
  </div>
</div>