<!--未達成タスク一覧-->
<% tasks_still.each do |t| %>
  <div class="row  mx-auto">
    <div class="row col-sm-10 border p-3 mb-3 rounded mx-auto bg-danger text-white task-tag">
      <div class="col-sm-4 my-auto">
        <%= link_to edit_vision_task_path(t.vision.id, t.id), {class: "text-light"} do %>
         <%= t.content %>
        <% end %>
      </div>

      <div class="col-5 my-auto">
        <!--タスク完了日時と現在の日時の差による分岐-->
        <% if (t.completion_on - Date.today) > -1 %>
          残 <%=(t.completion_on - Date.today).to_i %> 日

        <% else %>
          <i class="fas fa-exclamation-triangle"></i> <%= (t.completion_on - Date.today).to_i * -1 %> 日超過 <i class="fas fa-exclamation-triangle"></i>

        <% end %>
      </div>

      <div class="col text-right">
        <%= form_with model:t, url: vision_complete_path(t.vision.id, t.id), method: :patch do |f| %>
          <%= f.submit "DONE", class: "btn btn-outline-light" %>
        <% end %>
      </div>

    </div>
  </div>
<% end %>
<!--達成タスク一覧-->
<% tasks_complete.each do |t| %>
  <div class="row  mx-auto ">
    <div class="row col-sm-10 border p-3 mb-3 rounded mx-auto bg-primary text-white task-tag">

      <div class="col-sm-4 my-auto">
        <%= t.content %>
      </div>

      <div class="col-5 my-auto">
        <%= t.updated_at.strftime('%Y-%m-%d') %>
      </div>

      <div class="col text-right">
        <%= form_with model:t, url: vision_complete_path(t.vision.id, t.id), method: :patch do |f| %>
            <%= f.submit "RETURN", class: "btn btn-outline-light" %>
        <% end %>
      </div>

    </div>
  </div>
<% end %>

