<%= form_with(model:[vision, task], local: false) do |f| %>
  <div class="col mb-3">
    <%= f.text_field :content, placeholder: "TASK", class: 'form-control vision_title' %>
  </div>
  <div class="col mb-3 d-flex justify-content-center">
    <%= f.date_select :completion_on, use_month_numbers: true, start_year: Time.now.year, end_year: vision.finish_on.year, selected: obj %>
    <button class="btn btn-primary opacity-50 rounded-pill ml-5"><i class="fas fa-plus"></i></button>
  </div>
<% end %>
