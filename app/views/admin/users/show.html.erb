<div class="container-fluid mx-auto">
  <div class="row d-flex justify-content-center">
    <div class="col-2 p-3 shadow bg-white rounded profile-tag">
      
      <div class="text-center">
        <%= image_tag @user.get_profile_image, size: "200x200", class: "rounded-circle" %>
      </div>
      
      <div class="row">
        
        <div class="col-6">
          <h4 class="mt-3"><%= @user.name %></h4>
          <h6><span><i class="fas fa-birthday-cake"></i></span><%= @user.birthday.strftime('%Y/%m/%d') %></h6>
        </div>
        
        <div class="col-6 my-auto text-center">
          <% unless @user.user_status? %>
            <%= link_to "強制退会", out_admin_users_path(@user), method: :patch, "data-confirm" => "OKを押すと退会処理がされます。本当によろしいですか？", class: 'btn btn-outline-danger rounded follow-font' %>
          <% end %>
        </div>
      </div>
      
      <p><%= @user.biography %><p>
        
      <div class="row col-12 text-center p-0 m-0">
        <p class="col-4 p-0 mx-auto">Posts</p>
        <p class="col-4 p-0 mx-auto">Follow</p>
        <p class="col-4 p-0 mx-auto">Followers</p>
        <p class="col-4"><%= @user.visions.count %></p>
        <p class="col-4"><%= @user.followings.count %></p>
        <p class="col-4"><%= @user.followers.count %></p>
      </div>
    </div>
    
    <div class="col-7">
      <%= render "admin/visions/index", visions: @visions %>
    </div>
    
  </div>
</div>