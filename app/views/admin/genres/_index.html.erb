<div class="container-fluid mx-auto">
  <div class="row d-flex justify-content-center">
    <div class="col-2 p-3 shadow bg-white rounded">
      <%= form_with model:genre, url: admin_genres_path do |f| %>
        <div class="col mx-auto mb-4 ">
          <%= f.label :name, "カテゴリー名" %>
        </div>
        <div class="col mx-auto  mb-4">
          <%= f.text_field :name, class: 'form-control genre_name' ,placeholder: "Genre" %>
        </div>
        <div class="col mb-3">
          <%= f.submit submit, class: "btn btn-outline-success btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="col-7">
      <% genres.each do |genre| %>
        <div class="row col-10 shadow p-2 mb-3 bg-white rounded mx-auto">
  		    <div class="col-2 d-flex justify-content-center my-auto">
            <%= genre.name %>
            <%= link_to "編集", edit_admin_genre_path(genre.id) %>
           </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

